<header>
    <h1>Lessons</h1>
</header>

<div class="horizontal-list-container">
    <ol>
        <li>
            <a href="#" aria-label="" >Listening</a>
            <img src="../icons/Music-Note-2.svg" alt="music note">
        </li>
        <!-- <li>
            <a href="#">Your first words</a>
            <img src="../icons/Music-Note-2.svg">
        </li> -->
    </ol>
</div>

<h2>Own playlist</h2>
    <ul class="playlist">
        <% stories.slice(2, 3).forEach(story => { %>
        <li class="playlist-story">
            <img class="playlist-image" src="https://fdnd-agency.directus.app/assets/<%= story.image %>" alt="story image">
            <h3> <%= story.title %> </h3>
            <div class="playtime">
                <button>
                    <img src="../icons/play-orange.svg" alt="play-button">
                </button>
                <p><span>31 min. 55 sec</span></p>
            </div>
        </li>
        <% }) %>
        <article class="add-playlist">
            <img src="../icons/add.svg" alt="plus sign">
            <h3>Make a playlist!</h3>
            <p>Add your favorite stories in one playlist</p>
        </article>
    </ul>

<h2>All stories</h2> 
<div class="story-options">
    <div class="languages-container">
        <!--hier mee selecteer ik alleen de eerste 2 languages uit de directus API-->
        <% languages.slice(0, 2).forEach(language => { %>
        <button class="languages">
            <img src="https://fdnd-agency.directus.app/assets/<%= language.flag %>" alt="language flag">
            <h3> <%= language.language %> </h3>
        </button>
        <% }) %>
    </div>
    <a href="/index/stories">Show all</a>
</div>

<ul class="stories">
    <% stories.forEach(story => { %>
    <li>
        <img class="story-image" src="https://fdnd-agency.directus.app/assets/<%= story.image %>" alt="story image">
        <div class="story-details">
            <div class="title-flag">
                <h3> <%= story.title %> </h3>
                <img src="../icons/english.svg" alt="flag">
            </div>
            <p> <%= story.summary %> </p>
            <div class="story-links">
                <div class="playtime">
                    <button>
                        <img src="../icons/play-blue.svg" alt="play-button">
                    </button>
                    <p>3 min. 5 sec</p>
                </div>
                <div class="download">
                    <button>
                        <img src="../icons/download.svg" alt="download">
                    </button>
                </div>
            </div>
        </div>
    </li>
    <% }) %>
</ul>

<h2>Liked playlist</h2> 
<ul class="playlist">
    <% playlists.forEach(playlist => { %>
    <li class="playlist-story">
        <img class="playlist-image" src="https://fdnd-agency.directus.app/assets/<%= playlist.image %>" alt="story image">
        <h3> <%= playlist.title %> </h3>
        <div class="playlist-links">
            <div class="playtime">
                <button>
                    <img src="../icons/play-orange.svg" alt="play-button">
                </button>
                <p><span>31 min. 55 sec</span></p>
            </div>
            <button>
                <img src="../icons/heart.svg" alt="heart">
            </button>
        </div>  
    </li>
    <% }) %>
</ul>

<h2>Suggested playlist</h2> 
<ul class="playlist">
    <% playlists.forEach(playlist => { %>
    <li class="playlist-story">
        <img class="playlist-image" src="https://fdnd-agency.directus.app/assets/<%= playlist.image %>" alt="story-image">
        <h3> <%= playlist.title %> </h3>
        <div class="playlist-links">
            <div class="playtime">
                <button>
                    <img src="../icons/play-orange.svg" alt="play-button">
                </button>
                <p><span>31 min. 55 sec</span></p>
            </div>
            <button>
                <img src="../icons/heart.svg" alt="heart">
            </button>
        </div>
    </li>
    <% }) %>
</ul>


